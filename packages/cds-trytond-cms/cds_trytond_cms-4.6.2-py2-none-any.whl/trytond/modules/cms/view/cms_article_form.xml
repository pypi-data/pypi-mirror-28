<?xml version="1.0"?>
<form col="4">

    <label name="name" />
    <field name="name" />
    <label name="slug" />
    <field name="slug" />
    <label name="author" />
    <field name="author" />
    <label name="priority" />
    <field name="priority" />
    <label name="active" />
    <field name="active" />
    <newline />
    <label name="publish_date" />
    <field name="publish_date" />
    <label name="archive_date" />
    <field name="archive_date" />
    <newline />
    <label name="summary" />
    <field name="summary" colspan="3" xexpand="1" />
    <newline />

    <notebook colspan="4">                            
        <page string="Content" id="content_tab">
            <field name="content" widget="richtext"/>
        </page>
        <page string="Parent Articles" id="parent_tab">
            <field name="parents"/>
        </page>
        <page string="Child Articles" id="child_tab">
            <field name="children"/>
        </page>
    </notebook>
    <newline />

    <field name="state" />
    <group col="3" colspan="3" id="buttons">
        <button name="archive" string="Archive"
            icon="tryton-cancel"/>
        <button name="publish" string="Publish"
            icon="tryton-go-next"/>
        <button name="draft" string="Draft"
            icon="tryton-go-previous"/>
    </group>

</form>
