mast_update_children_method  give_structure_and_wavefunction_full_copy
end

begin static_gga
ibrion -1
nsw 0
mast_update_children_method  give_energy_to_dfe
end

begin relax_gga
ibrion 2
isif 2
mast_update_children_method  give_energy_to_dfe
end

begin relax_gga_meta
