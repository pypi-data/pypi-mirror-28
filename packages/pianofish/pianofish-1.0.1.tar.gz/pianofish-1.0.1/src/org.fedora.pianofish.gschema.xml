<schemalist>
  <schema path="/org/fedora/pianofish/" id="org.fedora.pianofish">
    <key name="interval" type="i">
      <default>3</default>
      <summary>Update interval</summary>
      <description>How often to update the displayed information, in seconds</description>
    </key>
    <key name="kthreads" type="b">
      <default>true</default>
      <summary>Show kthreads</summary>
      <description>Whether to show kernel threads</description>
    </key>
    <key name="uthreads" type="b">
      <default>true</default>
      <summary>Show uthreads</summary>
      <description>Whether to show userspace threads</description>
    </key>
    <key name="cgroups" type="b">
      <default>false</default>
      <summary>Show cgroups</summary>
      <description>Whether to show thread cgroups</description>
    </key>
    <key name="glob" type="b">
      <default>true</default>
      <summary>Use bash glob for filter</summary>
      <description>Whether to use a bash-style glob for the process filter</description>
    </key>
  </schema>
</schemalist>
